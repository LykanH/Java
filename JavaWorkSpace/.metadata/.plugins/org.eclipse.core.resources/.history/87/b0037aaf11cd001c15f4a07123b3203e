package com.guigu.java;
/**
 * 
 * @Description 封装与隐藏
 * @author muchen
 * @version
 * @date 2022年5月6日下午3:43:25
 *
 */
public class AnimalText {
	public static void main(String[] args) {
		animal a = new animal();
		a.name = "花花";
		a.age = 16;
		a.legs = 6;
		a.print();
	}
}


//定义一个动物类
class animal{
	String name;
	int age;
	int legs;
	public void print() {
		System.out.println("他的名字：" + this.name + "年龄：" + 
		this.age + "腿数量：" + this.legs);
	}
}