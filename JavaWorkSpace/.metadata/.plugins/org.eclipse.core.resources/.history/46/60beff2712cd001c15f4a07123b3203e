 */
public class AnimalText {
	public static void main(String[] args) {
		animal a = new animal();
		a.name = "花花";
		a.age = 16;

		a.setLegs(4);
//		a.legs = 6;
		a.print();
	}
}


//定义一个动物类
class animal{
	String name;
	int age;
	private int legs;				//腿的数量不能为负值(定义一个方法控制legs的赋值)
	
	public void setLegs(int l) {
		if(l > 0 && l % 2 == 0) {
			this.legs = l;
		}else {
			this.legs = 0;
		}
	}
	
	public void print() {
		System.out.println("他的名字：" + this.name + "年龄：" + 
		this.age + "腿数量：" + this.legs);
	}
}